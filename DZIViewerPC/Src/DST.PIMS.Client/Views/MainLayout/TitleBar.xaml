                    Width="auto"
                    MinWidth="100"
                    Height="35"
                    Margin="10,0,0,0"
                    Background="Transparent"
                    Click="BtnLoginChange_Click" />
        </StackPanel>
        <Popup x:Name="popupChange"
               AllowsTransparency="True"
               IsOpen="False"
               Placement="Relative"
               PlacementRectangle="0, 35, 0, 0"
               PlacementTarget="{Binding ElementName=btnLoginChange}"
               StaysOpen="False">
